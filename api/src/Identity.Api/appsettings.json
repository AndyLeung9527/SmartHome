{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "App": {
    "Domain": "http://localhost:10103",
    "AdminPassword": "admin",
    "WorkerId": 1
  },
  "ConnectionStrings": {
    "Postgresql": "Host=localhost;Port=5432;Username=postgres;Password=postgres;Database=identitydb",
    "Redis": "localhost",
    "Mail": "http://localhost:10105"
  },
  "Identity": {
    "User": {
      "RequireUniqueEmail": true
    },
    "Password": {
      "RequiredLength": 5,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false,
      "RequireLowercase": false,
      "RequireDigit": false
    },
    "SignIn": {
      "RequireConfirmedEmail": true
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:10:00",
      "MaxFailedAccessAttempts": 5
    }
  },
  "Jwt": {
    "Issuer": "Identity",
    "AccessExpirationMinutes": 30,
    "RefreshExpirationMinutes": 10080
  }
}
